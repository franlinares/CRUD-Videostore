<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <title>Movie</title>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/movies">Blockbuster</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/users/listUsers">User</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/userForm">Register User</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/movies/listMovies">Movie</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/movies/movieForm">Register Film</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/rents/listRenting">Renting List</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/rents/createRenting">Create Rent</a>
        </li>
      </ul>
      <form action="/movies/search" method="get" class="form-inline my-2 my-lg-0" action="/rents/searchMovie/" method="post">
        <input class="form-control mr-sm-2" type="text" name="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </nav>  
  <main>
    <div class="container-fluid">
      <div class="row">
        <% result.forEach(function(movie){ %>
          <div class="col-12 col-sm-12 col-md-6 col-lg-4 d-flex justify-content-center align-items-center py-3">
              <div class="card" style="width: 18rem;">
                  <div class="card-body">
                      <h5 class="card-title">
                          <%- movie.title %>
                      </h5>
                      <p class="card-text">
                          <%- movie.description %>
                      </p>
                      <p class="card-text">
                          <%- movie.release_date %>
                      </p>
                      <p class="card-text">
                        <%- movie.gender %>
                    </p>
                      <a href="/movies/singleMovie/<%- movie.id_movie %>" class="btn btn-primary">View Film</a>
                      <a href="/movies/deleteMovie/<%- movie.id_movie %>" class="btn btn-danger">Delete Film</a>
                  </div>
              </div>
          </div>
        <% }); %>
      </div>
    </div>
  </main>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>